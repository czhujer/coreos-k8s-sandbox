[Unit]
Description=testing centos machine
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill centos6-test1
ExecStartPre=-/usr/bin/docker rm centos6-test1
ExecStartPre=/usr/bin/docker pull centos:centos6
ExecStart=/usr/bin/docker run --name centos6-test1 centos:centos6 /bin/sh -c "while true; do echo Hello World; sleep 1; done"
ExecStop=/usr/bin/docker stop centos6-test1


